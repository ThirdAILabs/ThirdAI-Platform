job "train-{{ model_id }}-{{ type }}-{{ sub_type }}" {

  datacenters = ["dc1"]

  type = "batch"

  group "train-job" {
    count = 1

    task "server" {

      {% if platform == "docker" %}
        driver = "docker"
      {% elif platform == "local" %}
        driver = "raw_exec"
      {% endif %}

      template {
        destination = "local/config.json"
        data = <<EOH
{{ config_json }}
EOH
      }

      env {
        AWS_ACCESS_KEY = "{{ aws_access_key }}"
        AWS_ACCESS_SECRET = "{{ aws_access_secret }}"
      }

      config {
        {% if platform == "docker" %}
          image = "{{ registry }}/{{ image_name }}:{{ tag }}"
          image_pull_timeout = "15m"
          auth {
            username = "{{ docker_username }}"
            password = "{{ docker_password }}"
            server_address = "{{ registry }}"
          }
          volumes = [
            "{{ share_dir }}:/model_bazaar"
          ]
          args    = ["--config", "local/config.json]
        {% elif platform == "local" %}
          command = "{{ python_path }}"
          args    = ["{{ train_script }}", "--config", "local/config.json]
        {% endif %}
      }

      resources {
        cpu = {{ extra_options.get('allocation__cores', 1) * 2400 }}
        memory = {{ extra_options.get('allocation_memory', '6800') }}

      }
    }
  }
}